        </div>

        {{ember-youtube ytid=newLink autoplay=false playing="ytPlaying" ended="ytEnded" class="video"}}
        </div>
    <div class="playlist">
        <p>Songs in Playlist: {{model.length}}</p>
        <p>Currently Playing: {{currentSong}} - {{currentArtist}}</p>

        <ul>
            {{#each model as |song index|}}
            <!--<li>{{song.videoId}}</li>-->
            <li class="song"{{action "getId" song.videoId song.title song.artist index}}>{{song.title}} - {{song.artist}}</li>
            {{/each}}
        </ul>
    </div>
</div>


